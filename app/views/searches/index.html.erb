<%- model_class = Search -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<div class="row">
  <div class="span2"><div><!-- EO span2 -->
  <div class="span10">
    <div class="tabbable">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#pane1" data-toggle="tab">Your Searches</a></li>
            <li><a href="#pane2" data-toggle="tab">Newsroom Searches</a></li>
            <li><a href="#pane3" data-toggle="tab">Archive Searches</a></li>
        </ul>
          <div class="tab-content">
            <div id="pane1" class="tab-pane active">
              <ul class="thumbnails">
              <% @searches.each do |search| %>
                <li class="span4">
                  <div class="search-container">
                    <%= link_to image_tag(search.thumbnail, :border => 0), search_path(search.id)  %>
                    <h4><%= search.search_name %></h4>
                    <span class="badge badge-info"><%= search.notification_count%></span>
                    <h6>Search Details</h6>
                    <div class="search-details">
                      <span>Created by Owen Connor at <%= search.created_at.strftime("%d %b %H:%M")%>  </span>
                      <span>Location:<%= search.location%></span>
                      <span>Geolocation:<%= search.geolocation%></span>
                      <span>Second Language:<%= search.geolocation%></span>
                      <span>Terms:<%= search.context_terms%></span>
                    </div><!-- EO search-details -->
                    <div class="action-buttons">
                    <%= link_to "Edit Search", edit_search_path(search.id), :class => "btn btn-small btn-primary"%>  
                    <%= link_to "View Results", yt_search_results_path(:search_id => search.id), :class => "btn btn-small btn-info"%>
                    </div><!-- EO action-buttons --> 
                  </div><!-- EO search-border -->
                </li>
              <% end %>
            </ul> 

            </div>
            <div id="pane2" class="tab-pane">
            <h4>Pane 2 Content</h4>
              <p> and so on ...</p>
            </div>
            <div id="pane3" class="tab-pane">
              <h4>Pane 3 Content</h4>
            </div>
          </div><!-- /.tab-content -->
        </div><!-- /.tabbable -->
    
  <div><!-- EO span10 -->
</div> <!-- EO row -->



