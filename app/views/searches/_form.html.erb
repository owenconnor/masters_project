<%= simple_form_for @search, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :search_name, :required => true %>
  <%= f.input :location, :placeholder => 'Where the event is happening'%>
  <%= f.input :latitude %>
  <%= f.input :longitude %>
  <%= f.input :vicinity, :placeholder => 'The broader Region or State'%>
  <%= f.input :date_range, :collection => @possible_date_ranges, :required => true %>
  <%= f.input :second_language, :collection => @languages %>
  <%= f.input :context_terms, :placeholder => 'Search terms comma separated' %>
   <%= f.input :active_search %>
  <%=f.input :search_concept_id, :value => @search_concept_id %>
  <%= f.button :submit %>
<% end %>



 