<%- model_class = SearchConcept -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @search_concept.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:terms) %>:</strong></dt>
  <dd><%= @search_concept.terms %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_node) %>:</strong></dt>
  <dd><%= @search_concept.is_node %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ancestry) %>:</strong></dt>
  <dd><%= @search_concept.ancestry %></dd>
  <dt><strong><%= model_class.human_attribute_name(:navigation_node) %>:</strong></dt>
  <dd><%= @search_concept.navigation_node %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              search_concepts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_search_concept_path(@search_concept), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              search_concept_path(@search_concept),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
