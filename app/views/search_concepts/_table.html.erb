<h2>Add Predefined Terms</h2>
     <table class="table table-striped">
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:id) %></th>
            <th><%= model_class.human_attribute_name(:name) %></th>
            <th><%= model_class.human_attribute_name(:terms) %></th>

            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% @search_concepts.each do |search_concept| %>
            <tr>
              <td><%= link_to search_concept.id, search_concept_path(search_concept) %></td>
              <td><%= search_concept.name %></td>
              <td><%= search_concept.terms %></td>
              <td>
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                            edit_search_concept_path(search_concept), :class => 'btn btn-mini' %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                            search_concept_path(search_concept),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                            :class => 'btn btn-mini btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>  